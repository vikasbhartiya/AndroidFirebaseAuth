<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GetWorkDetailsFragment">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getSkillSet"
        android:layout_above="@+id/editNumPin"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/button_text_size"
        android:autofillHints="@string/Select_Skills"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectedSkill"
        android:layout_centerInParent="true"
        android:hint="Enter your area pin"
        android:inputType="text"
        android:visibility="gone"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editNumPin"
        android:layout_centerInParent="true"
        android:hint="Enter your area pin"
        android:inputType="number"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Next2"
        android:text="---->"
        android:layout_centerInParent="true"
        android:layout_below="@+id/editNumPin"
        android:paddingTop="@dimen/button_text_size"
        />

</RelativeLayout>